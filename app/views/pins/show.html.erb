<br>
<div class="row" id="pin_show">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-heading pin_image">
        <%= image_tag @pin.picture.url %>
      </div>
      <div class="panel-body">
        <div class="card-block">
          <h1>
            <%= @pin.title %>
          </h1>
          <p class="description">
            <%= @pin.description %>
          </p>
          <p class="card-text"><small class="text-muted">Created <%= time_ago_in_words(@pin.created_at) %> ago</small></p>
          <div class="btn-group">
            <%= link_to like_pin_path(@pin), method: :put, class: "btn btn-default" do %>
            <span class="glyphicon glyphicon-heart"></span>
            <%= @pin.get_upvotes.size %>
            <% end %>
            <% if user_signed_in? %>
              <%= link_to "Edit", edit_pin_path, class: "btn btn-default" %>
              <%= link_to "Delete", pin_path, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-default" %>
              <%= link_to "Delete", pin_path, class: "btn btn-danger", method: :delete, data: { confirm: "You sure hombre?" } %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
