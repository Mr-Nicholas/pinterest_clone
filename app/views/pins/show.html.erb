  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="card">
        <img class="card-img-top" src="<%= @pin.picture %>" alt="Profile Image" width="100%">
        <h1> <%= @pin.title %> </h1>
        <p> <%= @pin.description %> </p>
        <p> Submitted by: <%= @pin.user.email %> </p>

        <%= link_to "Back", root_path %>
        <%= link_to "Edit", edit_pin_path %>
